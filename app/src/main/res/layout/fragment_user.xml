<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_50"
    android:orientation="vertical"
    tools:context=".ui.user.UserFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_login_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/user_login_text_size"
        tools:text="login" />

    <FrameLayout
        android:id="@+id/user_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/user_dislike_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_weight="1"
            android:backgroundTint="@color/red_200"
            android:text="@string/user_dislike_button_text"
            android:textColor="@color/purple_700" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/user_like_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_200"
            android:text="@string/user_like_button_text"
            android:textColor="@color/purple_700" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>